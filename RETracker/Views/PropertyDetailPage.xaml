<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="RETracker.Views.PropertyDetailPage"
		     Title="New Item">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Street" FontSize="Medium" />
            <Entry Text="{Binding Street}" FontSize="Small" />
            <Label Text="City" FontSize="Medium" />
            <Entry Text="{Binding City}" FontSize="Small" />
            <Label Text="State" FontSize="Medium" />
            <Entry Text="{Binding State}" FontSize="Small" />
            <Label Text="Zip Code" FontSize="Medium" />
            <Entry Text="{Binding ZipCode}" FontSize="Small" />
            <Label Text="County" FontSize="Medium" />
            <Entry Text="{Binding County}" FontSize="Small" />
            <Label Text="Parcel Number" FontSize="Medium" />
            <Entry Text="{Binding ParcelNo}" FontSize="Small" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Cancel" Clicked="Cancel_Clicked" />
                <Button Text="Save" Clicked="Save_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
